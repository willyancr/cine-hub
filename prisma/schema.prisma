generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Movie {
  id           String      @id @default(cuid())
  title        String
  name         String
  poster_path  String
  vote_average Float
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt
  watchlist    Watchlist[]
  watched      Watched[]
}

model Watchlist {
  id         String   @id @default(uuid())
  created_at DateTime @default(now())
  movie      Movie    @relation(fields: [movieId], references: [id])
  movieId    String

  @@unique([id, movieId])
}

model Watched {
  id         String   @id @default(uuid())
  created_at DateTime @default(now())
  movie      Movie    @relation(fields: [movieId], references: [id])
  movieId    String

  @@unique([id, movieId])
}
